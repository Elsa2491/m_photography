<div class="countries">
  <div class="wrapper">
    <% @countries.each do |country| %>

      <div class="one_country_info">
        <div class="country_image">
          <%= cl_image_tag country.image.key, alt: "", :secure => true, :width=>300, :dpr=>2.0, :crop=>"scale", :aspect_ratio=>"2:3", :radius => 5, :quality=>100%> <!--crop: :fill, :radius =>  15, :crop=>"mfit", :aspect_ratio=>"2:1" ,  width: 280, height: 350,-->
        </div>

        <div class="country_CTA">
            <%= link_to "#{country.title} #{country.description}", country_path(country) %>
          <% if policy(country).edit? %>
            | <%= link_to 'Edit', edit_country_path(country) %> |
          <% end %>
          <% if policy(country).destroy? %>
            <%= link_to 'Delete', country_path(country), method: :delete, data: { confirm: "Are you sure you want to delete #{country.title}?"} %>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>
</div>

