<p><%= @country.title %> - <%= @country.description %></p>

<%= @country.regions.each_with_index do |region, index| %>
  <ul>
    <%= "#{index + 1}" %> - <%= region.title %> |Â 
    <%= region.description %>
    <% if policy(region).edit? %>
      | <%= link_to 'Edit region', edit_region_path(region) %> |
    <% end %>
    <% if policy(region).destroy? %>
      <%= link_to 'Delete region', region_path(region), method: :delete, data: { confirm: "Are you sure you want to delete #{region.title}?"}%>
    <% end %>
  </ul>
<% end %>

