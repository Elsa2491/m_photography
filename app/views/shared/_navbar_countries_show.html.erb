<div class="navbar sticky nav_countries_show" >

    <div class="pundit_nav">
      <% if policy(@country).edit? %>
        <%= link_to "Edit #{@country.title.capitalize}", edit_country_path(@country), class:"CTA" %>
      <% end %>
      <% if policy(@country).destroy? %>
        | <%= link_to "Delete #{@country.title.capitalize}", country_path(@country), class:"CTA", method: :delete, data: { confirm: "Are you sure you want to delete #{@country.title}?"}%>
      <% end %>
    </div>


    <div class="nav_margin">
      <% if policy(Region).create? %>
        <%= link_to "Add a region", new_country_region_path(@country), class:"CTA" %> |
      <% end %>


      <%= link_to "Home", root_path, class:"CTA" %>

      <% if user_signed_in? %>
        <%= image_tag "faguoren_logo.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% #else %>
        <%#= link_to root_path, class:"CTA" do  %>
            <%#= image_tag "faguoren_logo.jpg", class: "avatar dropdown-toggle", 'aria-haspopup': true, 'aria-expanded': false %>
        <% #end %>
      <% end %>

      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% end %>
      </div>
    </div>

</div>
